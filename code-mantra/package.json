{
  "name": "code-mantra",
  "displayName": "code-mantra",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-mantra.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Code Mantra",
      "properties": {
        "codeMantra.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Code Mantra notifications"
        },
        "codeMantra.rules": {
          "type": "array",
          "default": [
            {
              "trigger": "onSave",
              "message": "ETC? (Easier To Change?)",
              "filePattern": "**/*.{ts,js,tsx,jsx,py,java,go,rs,cpp,c,cs}"
            },
            {
              "trigger": "onSave",
              "message": "DRY? (Don't Repeat Yourself)",
              "filePattern": "**/*.{ts,js,tsx,jsx,py,java,go,rs,cpp,c,cs}"
            }
          ],
          "description": "List of notification rules",
          "items": {
            "type": "object",
            "properties": {
              "trigger": {
                "type": "string",
                "description": "Trigger type (currently only 'onSave' is supported)"
              },
              "message": {
                "type": "string",
                "description": "Notification message to display"
              },
              "filePattern": {
                "type": "string",
                "description": "File pattern to match (glob pattern)"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
